<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/manual_favorite_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/radio_favorite_url_hint"
        android:inputType="textUri"
        android:textColor="@color/startup_text_primary"
        android:textColorHint="@color/startup_text_secondary" />

    <EditText
        android:id="@+id/manual_favorite_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/radio_favorite_name_hint"
        android:inputType="text"
        android:textColor="@color/startup_text_primary"
        android:textColorHint="@color/startup_text_secondary" />
</LinearLayout>
