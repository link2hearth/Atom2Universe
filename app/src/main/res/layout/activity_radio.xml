<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/startup_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/radio_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_title"
            android:textColor="@color/startup_text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/radio_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/radio_status_idle"
            android:textColor="@color/startup_text_secondary" />

        <LinearLayout
            android:id="@+id/radio_player_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/startup_button_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/radio_player_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_player_title"
                android:textColor="@color/startup_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/radio_player_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/radio_player_status_idle"
                android:textColor="@color/startup_text_secondary" />

            <TextView
                android:id="@+id/radio_station_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/radio_player_empty"
                android:textColor="@color/startup_text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/radio_station_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/startup_text_secondary" />

            <TextView
                android:id="@+id/radio_now_playing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/startup_text_secondary"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/radio_play_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/radio_action_play"
                        app:backgroundTint="@color/startup_button_background"
                        android:textColor="@color/startup_button_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/radio_pause_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="@string/radio_action_pause"
                        app:backgroundTint="@color/startup_button_background"
                        android:textColor="@color/startup_button_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/radio_stop_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="@string/radio_action_stop"
                        app:backgroundTint="@color/startup_button_background"
                        android:textColor="@color/startup_button_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/radio_reload_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/radio_action_reload"
                        app:backgroundTint="@color/startup_button_background"
                        android:textColor="@color/startup_button_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/radio_favorite_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="@string/radio_action_favorite"
                        app:backgroundTint="@color/startup_button_background"
                        android:textColor="@color/startup_button_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/radio_record_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/radio_action_record"
                        app:backgroundTint="@color/startup_button_background"
                        android:textColor="@color/startup_button_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/radio_record_stop_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="@string/radio_action_stop_record"
                        app:backgroundTint="@color/startup_button_background"
                        android:textColor="@color/startup_button_text" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/startup_button_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_favorites_title"
                android:textColor="@color/startup_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/radio_favorites_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/radio_favorites_empty"
                android:textColor="@color/startup_text_secondary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/radio_favorites_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/radio_favorites_add_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/radio_favorites_add"
                app:backgroundTint="@color/startup_button_background"
                android:textColor="@color/startup_button_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/startup_button_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_search_title"
                android:textColor="@color/startup_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/radio_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/radio_search_placeholder"
                android:inputType="text"
                android:textColor="@color/startup_text_primary"
                android:textColorHint="@color/startup_text_secondary" />

            <Spinner
                android:id="@+id/radio_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <Spinner
                android:id="@+id/radio_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/radio_search_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/radio_action_search"
                    app:backgroundTint="@color/startup_button_background"
                    android:textColor="@color/startup_button_text" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/radio_reset_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/radio_action_reset"
                    app:backgroundTint="@color/startup_button_background"
                    android:textColor="@color/startup_button_text" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/radio_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/radio_results_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/radio_results_empty"
                android:textColor="@color/startup_text_secondary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/radio_results_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
